<h1><%= @hotel.name %>　レビュー一覧</h1>

<div class="mt-3">
  <% @reviews.each do |review| %>
    <div class="card w-100 mb-2">
      <h6 class="card-header">評価 : <%= review.rating %></h6>
      <div class="card-body py-2">
        <h6 class="card-title">タイトル : <%= review.title %></h6>
        <p class="card-subtitle mb-2">ユーザー名 : <%= review.user.name %></p>
        <p class="card-text font-weight-bolder"><%= review.body %></p>
        <p class="text-right m-0"><%= link_to 'レビュー詳細', hotel_review_path(@hotel, review) %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-around">
  <p><%= link_to 'レビューを投稿する', new_hotel_review_path(@hotel) %></p>
  <p><%= link_to "ホテル詳細", hotel_path(@hotel) %></p>
</div>

<h1><%= @hotel.name %></h1>

<div class="row mt-3">
  <div class="col-md-5">
    <img src="<%= @hotel.picture_url%>" class="img-fluid" />
  </div>
  <div class="col-md-7">
    <h5 class="mb-3">所在地 : <%= @hotel.prefecture.name %></h5>
    <h4 class="mb-5"><%= @hotel.description %></h4>
  </div>
</div>
<div class="my-2 d-flex justify-content-around">
  <p><%= link_to '予約する', new_hotel_reservation_path(@hotel) %></p>
  <p><%= link_to 'レビュー一覧', hotel_reviews_path(@hotel) %></p>
  <p><%= link_to 'レビューを投稿する', new_hotel_review_path(@hotel) %></p>
  <p><%= link_to 'ホテル一覧', hotels_path %></p>
</div>
<div class="mt-3">
  <h5>最新のレビュー</h5>
  <% @hotel.reviews.order(created_at: :desc).first(3).each do |review| %>
    <div class="card my-2">
      <h6 class="card-header">評価 : <%= review.rating %></h6>
      <div class="card-body">
        <h6 class="card-title">タイトル : <%= review.title %></h6>
        <p class="card-subtitle mb-2">名前 : <%= review.name %></p>
        <p class="card-text font-weight-bolder"><%= review.body %></p>
      </div>
    </div>
  <% end %>
</div>

<h1>ログイン</h1>

<div class="mt-3 text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_email">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6 text-center", placeholder: "example@hotelproject.com" %>
    </div>

    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_password">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6 text-center", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-3">
      <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

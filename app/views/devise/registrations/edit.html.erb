<h1>プロフィール編集</h1>

<div class="my-3 text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_email">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6 text-center", placeholder: "example@hotelproject.com" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_name">ユーザー名</label>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-md-6 text-center", placeholder: "ユーザー名" %>
    </div>

    <div class="form-group row justify-content-center">
      <div class="w-100">
        <label for="user_password">パスワード
        <i>(変更しない場合は空白のままにしてください)</i><br />
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-6 text-center", placeholder: "パスワード" %>
      <% if @minimum_password_length %>
        <em class="w-100"><%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>

    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_password_confirmation">パスワード(確認)</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-md-6 text-center", placeholder: "パスワード(確認)" %>
    </div>

    <div class="form-group row justify-content-center">
      <div class="w-100">
        <label for="user_current_password">現在のパスワード</label>
        <i>(確認のため現在のパスワードが必要です。)</i>
      </div>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control col-md-6 text-center", placeholder: "現在のパスワード" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "更新", class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>

<div class="mb-3 text-center"><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete, class: "btn btn-outline-danger" %></div>

<div class="row justify-content-center">
  <%= link_to "戻る", :back %>
</div>

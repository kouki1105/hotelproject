<h1><%= @prefecture.name %></h1>

<div class="row mt-3">
  <% @hotels.each do |hotel| %>
    <div class="col-md-3 my-2">
      <div class="card h-100">
        <img src="<%= hotel.picture_url%>" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title"><%= hotel.name %></h5>
          <p class="card-text">所在地 : <%= hotel.prefecture.name %></p>
          <p class="card-text"><%= hotel.description %></p>
          <p class="card-text text-right"><%= link_to '詳細を見る', hotel_path(hotel) %></p>
        </div>
        <div class="card-footer text-center d-flex justify-content-around">
          <%= link_to '予約する', new_hotel_reservation_path(hotel), class: "card-link" %>
          <%= link_to 'レビュー投稿', new_hotel_review_path(hotel), class: "card-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h1>パスワードを忘れた方へ</h1>

<div class="mt-3 text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row justify-content-center">
      <label class="w-100" for="user_email">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6 text-center", placeholder: "example@hotelproject.com" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "再設定用のメールを送る", class: "btn btn-outline-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>  

<h1><%= @hotel.name %>を予約する</h1>

<div class="mt-3">
  <%= form_with(model: [@hotel, @reservation], local: true) do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>

    <div class="form-group">
      <label class="w-100" for="reservation_start_date">チェックイン日</label>
      <%= form.date_select :start_date, {start_year: Time.now.year, date_separator: '/ ', :use_month_numbers => true}, class: "form-control col-md-2 select_date" %>
    </div>

    <div class="form-group">
      <label class="w-100" for="reservation_end_date">チェックアウト日</label>
      <%= form.date_select :end_date, {start_year: Time.now.year, date_separator: '/ ', :use_month_numbers => true}, class: "form-control col-md-2 select_date" %>
    </div>

    <div class="form-group">
      <label for="reservation_number_of_people">人数</label>
      <%= form.text_field :number_of_people, id: :reservation_number_of_people, class: "form-control", placeholder: "2" %>
    </div>

    <div class="form-group">
      <label for="reservation_name">お名前</label>
      <%= form.text_field :name, id: :reservation_name, class: "form-control", placeholder: "予約　太郎" %>
    </div>

    <div class="form-group">
      <label for="reservation_email">メールアドレス</label>
      <%= form.text_field :email, id: :reservation_email, class: "form-control", placeholder: "example@hotelproject.com" %>
    </div>

    <%= form.hidden_field :hotel_id %>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="actions">
      <%= form.submit '送信', class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>

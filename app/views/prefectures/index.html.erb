<h1>都道府県ごとの一覧</h1>

<% @prefectures.in_groups_of(6) do |group| %>
  <div class="row mt-3">
    <% group.compact.each do |prefecture| %>
          <div class="card card-prefecture col-md-2 my-1 p-0">
            <img src="<%= prefecture.picture_url%>" class="card-img" />
            <div class="card-img-overlay d-flex align-items-end p-0 m-0">
              <h5 class="card-text w-100 text-center text-prefecture"><%= link_to prefecture.name, prefecture_path(prefecture), class: "text-white stretched-link" %></h5>
            </div>
          </div>
    <% end %>
  </div>
<% end %>
